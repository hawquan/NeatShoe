<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/home">
    <activity
        android:id="@+id/mainActivity"
        android:name="com.example.neatshoe.MainActivity"
        android:label="app_bar_main"
        tools:layout="@layout/app_bar_main" />
    <fragment
        android:id="@+id/home"
        android:name="com.example.neatshoe.Home"
        android:label="Home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_home_to_profile"
            app:destination="@id/profile" />
        <action
            android:id="@+id/action_home_to_login"
            app:destination="@id/login" />
        <action
            android:id="@+id/action_home_to_register"
            app:destination="@id/register" />
        <action
            android:id="@+id/action_home_to_logout"
            app:destination="@id/logout" />
        <action
            android:id="@+id/action_home_to_location"
            app:destination="@id/location" />
    </fragment>
    <fragment
        android:id="@+id/profile"
        android:name="com.example.neatshoe.Profile"
        android:label="Profile"
        tools:layout="@layout/fragment_profile" >
        <action
            android:id="@+id/action_profile_to_home"
            app:destination="@id/home" />
    </fragment>
    <fragment
        android:id="@+id/login"
        android:name="com.example.neatshoe.Login"
        android:label="Login" >
        <action
            android:id="@+id/action_login_to_register"
            app:destination="@id/register" />
        <action
            android:id="@+id/action_login_to_home"
            app:destination="@id/home" />
    </fragment>
    <fragment
        android:id="@+id/register"
        android:name="com.example.neatshoe.Register"
        android:label="Register" >
        <action
            android:id="@+id/action_register_to_login"
            app:destination="@id/login" />
        <action
            android:id="@+id/action_register_to_home"
            app:destination="@id/home" />
    </fragment>
    <fragment
        android:id="@+id/logout"
        android:name="com.example.neatshoe.Logout"
        android:label="fragment_logout"
        tools:layout="@layout/fragment_logout" >
        <action
            android:id="@+id/action_logout_to_login"
            app:destination="@id/login" />
    </fragment>
    <fragment
        android:id="@+id/location"
        android:name="com.example.neatshoe.Location"
        android:label="Location"
        tools:layout="@layout/fragment_location">
        <action
            android:id="@+id/action_location_to_home"
            app:destination="@id/home" />
    </fragment>
</navigation>